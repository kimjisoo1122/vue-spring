<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.mapper.BoardMapper">

    <!-- 게시글을 등록합니다. -->
    <insert id="insertBoard"
            parameterType="boardDto"
            useGeneratedKeys="true"
            keyProperty="boardId">
        INSERT INTO board
            (board_id,       <!-- 게시글 번호 -->
            category_id,     <!-- 카테고리 번호 -->
            board_type,      <!-- 게시글 타입 -->
            board_title,     <!-- 게시글 제목 -->
            board_content,   <!-- 게시글 내용 -->
            board_secret,    <!-- 비밀글 여부 -->
            user_id,         <!-- 등록자 아이디 -->
            user_name)       <!-- 등록자 이름 -->
        VALUES
            (#{boardId},
            #{categoryId},
            #{boardType},
            #{boardTitle},
            #{boardContent},
            #{boardSecret},
            #{userId},
            #{userName})
    </insert>

    <!-- 게시글 조건에 따라 조회합니다. -->
    <select id="selectByCondition"
            parameterType="boardSearchCondition"
            resultType="boardDto">
        SELECT
            <include refid="selectBoard"/>
            ,c.category_name
        FROM board b
            JOIN category c ON c.category_id = b.category_id
        <include refid="whereSearchCondition"/>

        <!-- ORDER BY -->
        <trim prefix="ORDER BY" suffix=" ">
            <choose>
                <when test="orderCondition == 'title'">
                    b.board_title
                </when>
                <when test="orderCondition == 'viewCnt'">
                    b.view_cnt
                </when>
                <otherwise>
                    b.create_date
                </otherwise>
            </choose>
            <choose>
                <when test="order == 'asc'">
                    asc
                </when>
                <otherwise>
                    desc
                </otherwise>
            </choose>
        </trim>

        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 게시글의 조회수를 1 증가시킵니다. -->
    <update id="increaseViewCnt"
            parameterType="long">
        UPDATE board
        SET view_cnt = view_cnt + 1
        WHERE board_id = #{boardId}
    </update>
    
    <!-- 게시글을 업데이트 합니다.-->
    <update id="updateBoard"
            parameterType="boardDto">
        UPDATE board
            <set>
                <if test="categoryId != null">
                    category_id = #{categoryId},
                </if>
                <if test="boardType != null and boardType != ''">
                    board_type = #{boardType},
                </if>
                <if test="boardTitle != null and boardTitle != ''">
                    board_title = #{boardTitle},
                </if>
                <if test="boardContent != null and boardContent != ''">
                    board_content = #{boardContent},
                </if>
                <if test="boardSecret != null and boardSecret != ''">
                    board_secret = #{boardSecret},
                </if>
                update_date = now()
            </set>
        WHERE board_id = #{boardId}
    </update>

    <delete id="deleteBoard"
            parameterType="long">
        DELETE
        FROM board
        WHERE board_id = #{boardId}
    </delete>


    <!-- 게시글 목록 -->
    <sql id="selectBoard">
        b.board_id,
        b.category_id,
        b.board_type,
        b.board_title,
        b.board_content,
        b.board_secret,
        b.view_cnt,
        b.user_id,
        b.user_name,
        b.create_date,
        b.update_date
    </sql>

    <!-- 게시글 검색조건 -->
    <sql id="whereSearchCondition">
        <where>
            b.board_type = #{boardType} AND
            <choose>
                <!-- 검색기간이 존재하지 않으면 지난 1달을 기본으로 조회합니다. -->
                <when test="(fromDate != null &amp;&amp; fromDate !='') || (toDate != null &amp;&amp; toDate !='')">
                    DATE_FORMAT(b.create_date, '%Y-%m-%d')
                    BETWEEN #{fromDate}
                        AND #{toDate}
                </when>
                <otherwise>
                    DATE_FORMAT(b.create_date, '%Y-%m-%d')
                    BETWEEN DATE_FORMAT(DATE_SUB(CURDATE(), INTERVAL 1 MONTH),'%Y-%m-%d')
                        AND DATE_FORMAT(NOW(),'%Y-%m-%d')
                </otherwise>
            </choose>

            <if test="searchCategory != null &amp;&amp; searchCategory != ''">
                AND b.category_id = #{searchCategory}
            </if>
            <if test="search != null &amp;&amp; search != ''">
                AND
                    (b.board_title LIKE CONCAT('%', #{search}, '%')
                    OR
                    b.board_content LIKE CONCAT('%', #{search}, '%'))
            </if>
        </where>
    </sql>

</mapper>